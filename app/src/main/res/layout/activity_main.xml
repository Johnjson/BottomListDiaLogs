<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/mbottom1"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_marginTop="@dimen/com_padding_55"
        android:text="底部弹出dialog1"
        android:gravity="center"
        android:background="#F2F2F2"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/mbottom2"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_below="@+id/mbottom1"
        android:layout_marginTop="@dimen/com_padding_10"
        android:text="底部弹出dialog2"
        android:padding="5dp"
        android:gravity="center"
        android:background="#F2F2F2"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/middle1"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_below="@+id/mbottom2"
        android:layout_marginTop="@dimen/com_padding_10"
        android:text="中部弹出dialog1"
        android:padding="5dp"
        android:gravity="center"
        android:background="#F2F2F2"
        android:layout_centerHorizontal="true"
        />


    <TextView
        android:id="@+id/middle2"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_below="@+id/middle1"
        android:layout_marginTop="@dimen/com_padding_10"
        android:text="中部弹出dialog2"
        android:padding="5dp"
        android:gravity="center"
        android:background="#F2F2F2"
        android:layout_centerHorizontal="true"
        />


    <TextView
        android:id="@+id/select"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_below="@+id/middle2"
        android:layout_marginTop="@dimen/com_padding_10"
        android:text="选择弹出dialog"
        android:padding="5dp"
        android:gravity="center"
        android:background="#F2F2F2"
        android:layout_centerHorizontal="true"
        />


    <TextView
        android:id="@+id/selec1"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_below="@+id/select"
        android:layout_marginTop="@dimen/com_padding_10"
        android:text="单个按钮弹出dialog"
        android:padding="5dp"
        android:gravity="center"
        android:background="#F2F2F2"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/loading"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_below="@+id/selec1"
        android:layout_marginTop="@dimen/com_padding_10"
        android:text="loading"
        android:padding="5dp"
        android:gravity="center"
        android:background="#F2F2F2"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>